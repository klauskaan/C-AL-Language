{
  "name": "cal-language",
  "displayName": "C/AL Language Support",
  "description": "Language support for Microsoft Dynamics NAV C/AL",
  "version": "0.5.0",
  "publisher": "cal-extension",
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [
    "onLanguage:cal"
  ],
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "C/AL",
    "CAL",
    "Dynamics NAV",
    "Microsoft Dynamics",
    "NAV"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/klauskaan/messing-around"
  },
  "contributes": {
    "languages": [
      {
        "id": "cal",
        "aliases": [
          "C/AL",
          "CAL",
          "cal"
        ],
        "extensions": [
          ".cal",
          ".txt"
        ],
        "configuration": "./cal.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cal",
        "scopeName": "source.cal",
        "path": "./syntaxes/.cal.tmLanguage.json.disabled",
        "tokenTypes": {
          "identifier.quoted.double.cal": "string"
        }
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "keyword",
        "description": "Keywords"
      },
      {
        "id": "variable",
        "description": "Variables and identifiers"
      }
    ],
    "semanticTokenModifiers": [
      {
        "id": "declaration",
        "description": "Symbol declarations"
      }
    ],
    "semanticTokenScopes": [
      {
        "scopes": {
          "keyword": [
            "keyword.control.cal",
            "keyword.other.cal"
          ],
          "variable": [
            "variable.other.cal",
            "entity.name.variable.cal"
          ],
          "type": [
            "storage.type.cal",
            "entity.name.type.cal"
          ],
          "function": [
            "entity.name.function.cal"
          ],
          "string": [
            "string.quoted.single.cal"
          ],
          "number": [
            "constant.numeric.cal"
          ],
          "operator": [
            "keyword.operator.cal"
          ],
          "comment": [
            "comment.line.cal",
            "comment.block.cal"
          ]
        }
      }
    ],
    "configuration": {
      "title": "C/AL Language Support",
      "properties": {
        "cal.languageServer.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable the C/AL Language Server. Provides IntelliSense, hover information, go-to-definition, find references, and semantic highlighting. Requires window reload after changing.",
          "scope": "window"
        },
        "cal.semanticHighlighting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable semantic highlighting from the Language Server. When disabled, only TextMate grammar highlighting is used. Useful for debugging highlighting issues.",
          "scope": "window"
        },
        "cal.diagnostics.warnDeprecated": {
          "type": "boolean",
          "default": true,
          "description": "Show warnings for deprecated functions (e.g., GETRECORDID, RECORDLEVELLOCKING, CONSISTENT). When disabled, deprecated function diagnostics are suppressed.",
          "scope": "resource"
        },
        "cal.diagnostics.warnUnknownAttributes": {
          "type": "boolean",
          "default": true,
          "description": "Show warnings for unknown procedure attributes (e.g., [Extrnal] instead of [External]). Helps catch typos in attribute names.",
          "scope": "resource"
        },
        "cal.diagnostics.warnActionNesting": {
          "type": "boolean",
          "default": true,
          "description": "Show warnings for invalid action nesting in ACTIONS sections (e.g., ActionContainer nested inside another action, or Action/Separator with children).",
          "scope": "resource"
        },
        "cal.workspaceIndexing.includeTxtFiles": {
          "type": "boolean",
          "default": true,
          "description": "Include .txt files in workspace symbol indexing (Ctrl+T). NAV commonly exports C/AL objects as .txt files. Files are verified to contain C/AL content before indexing.",
          "scope": "window"
        }
      }
    }
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b tsconfig.json && tsc -b tsconfig.server.json",
    "watch": "tsc -b -w tsconfig.json tsconfig.server.json",
    "test": "node ./out/test/runTest.js",
    "postinstall": "git config core.hooksPath .githooks 2>/dev/null || true && cd server && npm install",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "mode": "node toggle-highlighting-mode.js",
    "mode:textmate": "node toggle-highlighting-mode.js textmate",
    "mode:semantic": "node toggle-highlighting-mode.js semantic",
    "mode:both": "node toggle-highlighting-mode.js both"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-plugin-local-rules": "^3.0.2",
    "typescript": "^5.0.0"
  }
}
