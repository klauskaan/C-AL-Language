{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./out/server",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "./server/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true
  },
  "include": ["server/src/**/*"],
  "exclude": ["node_modules", "server/src/**/__tests__/**"]
}
