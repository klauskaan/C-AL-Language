{
  "name": "cal-language-server",
  "version": "0.4.6",
  "description": "Language Server for C/AL",
  "main": "./out/server/server.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "perf:quick": "NODE_OPTIONS='--expose-gc' ts-node src/__tests__/performance/suites/quick.suite.ts",
    "perf:benchmark": "NODE_OPTIONS='--expose-gc' ts-node src/__tests__/performance/suites/standard.suite.ts",
    "perf:stress": "NODE_OPTIONS='--expose-gc' ts-node src/__tests__/performance/suites/stress.suite.ts",
    "perf:compare": "ts-node src/__tests__/performance/utils/compare.ts",
    "perf:update-baseline": "ts-node src/__tests__/performance/utils/updateBaseline.ts",
    "perf:memory": "NODE_OPTIONS='--expose-gc' ts-node src/__tests__/performance/benchmarks/memory.bench.ts",
    "perf:all": "npm run perf:benchmark && npm run perf:memory && npm run perf:compare",
    "validate:real": "ts-node scripts/validate-real.ts",
    "lexer:health": "ts-node scripts/lexer-health.ts"
  },
  "dependencies": {
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^18.0.0",
    "chalk": "^4.1.2",
    "jest": "^30.2.0",
    "table": "^6.8.2",
    "tinybench": "^2.9.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "v8-profiler-next": "^1.10.0"
  }
}
